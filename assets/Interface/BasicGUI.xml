<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="com.codebetyars.skyhussars.engine.gamestates.MainMenuControls">
        <layer id="background" childLayout="center">
            <image filename="Textures/p80-background.jpg" width="100%" height="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="padding1" height="35%" width="35%" align="center" childLayout="center"/>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical" backgroundColor="#00000099">
                <text text="Welcome to SkyHussars R6. This is a simple flying game made to test out jMonkeyEngine and to learn a little bit about aerodynamics. The plane can be pitched and rolled with the cursor keys. The thrust can be controlled with the number keys from 1 to 5. There is no objective and the only way to fail is to crash to the ground. In that case the plane can be restored to its original position with the R button. To pause the game, the P key can be used. To switch between outer and cockpit view use F1 and F5. Space  can be used to shoot with the gun. Left and right mouse buttons control the field of view. To exit the game please press ESC." font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true" />
                <panel id="timePanel" width="50%"  childLayout="horizontal">
                    <text text="Please select start time for flight: " font="Interface/Fonts/Default.fnt" width="50%" height="100%" wrap="true" />
                    <control id="timeControl" width="50%" name="dropDown">
                        <interact onChanged="setTime()"/>
                    </control>  					
                </panel> 
                <panel id="planeSelectPanel" width="50%"  childLayout="horizontal">
                    <text text="Please select the plane type you want to fly " font="Interface/Fonts/Default.fnt" width="50%" height="100%" wrap="true" />
                    <control id="planeSelect" width="50%" name="dropDown">
                        <interact onChanged="setPlane()"/>
                    </control> 
                </panel>
                <panel id="enemyCountPanel" width="50%"  childLayout="horizontal">
                    <text text="Please select the number of enemy planes" font="Interface/Fonts/Default.fnt" width="50%" height="100%" wrap="true" />
                    <control id="enemyCount" width="50%" name="dropDown">
                        <interact onChanged="setEnemyCount()"/>
                    </control>  
                </panel>
                <panel id="enemyCountPanel" width="50%"  childLayout="horizontal">
                    <text text="Disable water(can increase performance)" font="Interface/Fonts/Default.fnt" width="50%" height="100%" wrap="true" />
                    <control id="waterEnabled" width="50%" name="dropDown">
                        <interact onChanged="setWaterEnabled()"/>
                    </control>  
                </panel>
            </panel>				
            <panel id="button_panel" height="25%" width="50%" align="center" childLayout="horizontal" backgroundColor="#00000099" padding="25px">				
                <panel id="okPanel" width="50%"  childLayout="center">
                    <control name="button" label="Start Flying" id="StartButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="startGame()"/>
                    </control>
                </panel>         
            </panel>
        </layer>
    </screen>
    <screen id="main" controller="com.codebetyars.skyhussars.engine.gamestates.MissionControls">
        <layer id="foreground" childLayout="vertical" align="center">
            <panel id="panel_top" height="90%" align="center" childLayout="vertical">
                <panel id="upperpadding" height="38%" width="50%" align="center" childLayout="horizontal" padding="25px">				         
                </panel>
                <panel id="exitMenuPanel" height="26%" width="50%" align="center" childLayout="vertical" backgroundColor="#00000099" padding="25px" textSize="2.0" visible="false">
                    <text text="Are you sure you want to quit?" font="Interface/Fonts/courier_new_42.fnt" width="100%" height="100%" wrap="true" textSize="50%" />
                    <panel id="exitToSystemPanel" width="50%"  childLayout="horizontal" padding="25px" align="center">
                        <panel width="50%" childLayout="center">
                            <control name="button" label="Exit to desktop" id="exitToDesktop" visibleToMouse="true"> 
                                <interact onClick="exitToDesktop()"/>
                            </control>
                        </panel>
                        <panel  width="50%" childLayout="center">
                            <control name="button" label="Cancel" id="cancel" padding="50px" visibleToMouse="true"> 
                                <interact onClick="closePopup()"/>
                            </control>
                        </panel>
                    </panel>         
                </panel>
                <panel id="bottompadding" height="38%" width="50%" align="center" childLayout="horizontal" padding="25px">				         
                </panel>
            </panel>
            <panel id="panel_bottom"  childLayout="horizontal" valign="bottom" height="10%">
                <panel id="panel_empty" valign="bottom"  height="100%" width="75%" childLayout="vertical">
                </panel>
                <panel id="panel_information"  childLayout="horizontal" align="right" valign="bottom" backgroundColor="#00000099" height="100%" width="25%">
                    <text id="speedDisplay" text="" font="Interface/Fonts/Default.fnt" width="100%" height="100%" vAlign="right"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
